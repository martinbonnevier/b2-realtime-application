<!DOCTYPE html>
<html lang="en">
<a name="top"></a>

<head>
  <%- include('../partials/head'); %>
</head>

<body class="container">
  <flash>
    <%- include('../partials/flash') %>
  </flash>

  <header>
    <%- include('../partials/header'); %>
  </header>

  <main>
    <div class="jumbotron .bg-light.bg-gradient">


      <h1 class="display-4">Current title: <%= issue.title %>
      </h1>

      </br>
      <% let action = "/submitNewTitle:"+issue.iid %>
        <form method="post" action="/submitNewTitle">
        <div class="form-group" >
          <label for="title">Enter new title: </label>
          <input id="title" type="text" name="newTitle" value="Enter new title">
          <input id="issue" type="text" name="id" value="<%= issue.iid %>" style="display: none;">
        </div>
        <div>
          <button type="submit" class="btn btn-outline-primary">Update Title</button>
        </div>

      </form>
    </br>

    <a class="btn btn-outline-primary" href="/" role="button">Cancel (Back to issues)</a>
  </div>
  </main>

  <footer>
    <%- include('../partials/footer'); %>
  </footer>

</body>


</html>